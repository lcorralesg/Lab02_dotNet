<Window x:Class="Lab02.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab02"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="350">
    <Grid>
        <StackPanel>
            <Label Content="Ingresar Usuario" HorizontalAlignment="Center" FontSize="20" Margin="0,30,0,20"/>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,10">
                <Label Content="Usuario:" Width="100"/>
                <TextBox x:Name="txtUsuario" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,10">
                <Label Content="Contraseña:" Width="100"/>
                <PasswordBox x:Name="txtPassword" Width="200"/>
            </StackPanel>
            <Button x:Name="btnIngresar" Content="Ingresar" Width="100" Margin="20,20,20,0" Click="btnIngresar_Click"/>
        </StackPanel>
    </Grid>
</Window>
