<Window x:Class="Lab02.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab02"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Menu" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Label Content="Operaciones" FontSize="15" Margin="0,0,20,0"/>
                <Button Content="Salidas" Margin="20,0,0,0" Height="30" Width="100" Click="btnSalidas_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Label Content="Mantenimiento" FontSize="15" Margin="0,0,20,0"/>
                <Button Content="Camiones" Margin="20,0,0,0" Height="30" Width="100" Click="btnCamiones_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Label Content="Reportes" FontSize="15" Margin="0,0,20,0"/>
                <Button Content="Listado Salidas" Margin="20,0,0,0" Height="30" Width="100" Click="btnListado_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
